{
  "name": "@vramework/mono",
  "version": "0.5.0",
  "description": "The vramework monorepo",
  "repository": "git@github.com:vlandor/vramework.git",
  "author": "yasser.fadl@gmail.com",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/core",
      "packages/cli",
      "packages/fetch",
      "packages/schedule",
      "packages/services/*",
      "packages/servers/*",
      "packages/servers/express/*",
      "packages/servers/fastify/*",
      "packages/servers/uws/*",
      "packages/cloud/aws/*",
      "packages/cloud/azure/*"
    ]
  },
  "scripts": {
    "tsc": "yarn workspaces foreach -A -p run tsc",
    "build": "tsc -b",
    "release": "yarn build && npx changeset publish",
    "ncu": "yarn workspaces foreach -p -A run ncu",
    "test": "yarn workspaces foreach -p -A run test",
    "lint": "npx oxlint@latest",
    "prettier": "npx prettier . --write",
    "typedoc": "npx typedoc",
    "changeset": "npx changeset"
  },
  "packageManager": "yarn@4.5.0",
  "devDependencies": {
    "@types/node": "^20.11.30",
    "prettier": "3.3.3",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.7"
  },
  "dependencies": {
    "@azure/functions": "^4.6.0",
    "@changesets/cli": "^2.27.9",
    "typescript": "^5.6"
  },
  "engines": {
    "node": ">=18"
  }
}
