{
  "name": "@vramework/fastify",
  "version": "0.5.7",
  "description": "The vramework fastify server",
  "license": "MIT",
  "author": "yasser.fadl@gmail.com",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "tsc": "tsc",
    "build:esm": "tsc -b && echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "build": "rm -rf dist && yarn build:esm",
    "release": "npm run build && npm test",
    "ncu": "ncu",
    "test": "echo 'No tests'"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./*": {
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.js"
    },
    "./*.d.ts": {
      "import": "./dist/esm/*.d.ts",
      "require": "./dist/cjs/*.d.ts"
    }
  },
  "peerDependencies": {
    "@vramework/core": "^0.5.10"
  },
  "dependencies": {
    "@vramework/fastify-plugin": "^0.5.6",
    "fastify": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  }
}
