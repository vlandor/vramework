{
  "name": "@vramework/deploy-next",
  "version": "0.4.4",
  "license": "MIT",
  "author": "yasser.fadl@gmail.com",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "type": "module",
  "scripts": {
    "tsc": "tsc",
    "build:esm": "tsc -b && cp package.json dist/esm/package.json",
    "build:cjs": "tsc -b tsconfig.cjs.json && cp package.json dist/cjs/package.json && sed 's/\"type\": \"module\"/\"type\": \"commonjs\"/' dist/cjs/package.json > dist/cjs/package.tmp.json && mv dist/cjs/package.tmp.json dist/cjs/package.json",
    "build": "rm -rf dist && yarn build:esm && yarn build:cjs",
    "release": "npm run build && npm test",
    "ncu": "ncu",
    "test": "echo 'No tests'"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./*": {
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.js"
    },
    "./*.d.ts": {
      "import": "./dist/esm/*.d.ts",
      "require": "./dist/cjs/*.d.ts"
    }
  },
  "peerDependencies": {
    "next": "*"
  },
  "dependencies": {
    "@types/cookie": "^0.6.0",
    "@vramework/core": "^0.4.6",
    "cookie": "^1.0.1",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "next": "^15",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  }
}
