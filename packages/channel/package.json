{
  "name": "@vramework/channel",
  "version": "0.5.0",
  "author": "yasser.fadl@gmail.com",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "type": "module",
  "scripts": {
    "tsc": "tsc",
    "build:esm": "tsc -b && echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "build:cjs": "tsc -b tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "build": "rm -rf dist && yarn build:esm && yarn build:cjs",
    "ncu": "ncu",
    "release": "npm run build && npm test",
    "test": "bash run-tests.sh",
    "test:watch": "bash run-tests.sh --watch",
    "test:coverage": "bash run-tests.sh --coverage"
  },
  ".": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "./*": {
    "import": "./dist/esm/*.js",
    "require": "./dist/cjs/*.js"
  },
  "./*.d.ts": {
    "import": "./dist/esm/*.d.ts",
    "require": "./dist/cjs/*.d.ts"
  },
  "peerDependencies": {
    "@vramework/core": "^0.5.23"
  },
  "devDependencies": {
    "@types/node": "^22.7.8",
    "typescript": "^5.6"
  },
  "engines": {
    "node": ">=18"
  }
}
