{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2021",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noLib": false,
    "strict": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "paths": {
      "@vramework/core": ["./packages/core"],
      "@vramework/core/*": ["./packages/core/*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts", ".typedocs"]
}
